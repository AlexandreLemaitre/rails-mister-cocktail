<div class="navbar">
  <div class="navbar navbar-expand-sm navbar-lewagon">
    <div class="d-flex justify-content-right">
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
    </div>
      <div class="collapse navbar-collapse">
        <div class="form form-inline my-2 my-lg-0">
          <input type="text" class="form-control mr-sm-2" name="query" type="search" placeholder="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </div>
      </div>
  </div>
</div>
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%);">
    <div class="banner">
      <h1>Alex's cocktails</h1>
      <p>Awesome cocktails for an epic night</p>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-12 col-md-6 col-lg-3">
          <% image_url = cocktail.photo.present? ? cl_image_path(cocktail.photo.key) : "https://source.unsplash.com/500x400/?cocktail" %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_url %>');">
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>
            <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>


